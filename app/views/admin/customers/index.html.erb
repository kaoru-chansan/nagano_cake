<div class="container">
  <div class="row">
    <h2>会員一覧</h2>

      <table class="table">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name, admin_customer_path(customer.id)  %></td>
            <td><%= customer.email %></td>
           <td class="<%= customer.is_active ? 'text-green' : 'text-green' %>"><%= customer.is_active ? '有効' : '退会済み' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>