<h2>商品新規登録</h2>

<% if @admin_item.errors.any? %>
  <ul class="alert alert-danger" role="alert">
    <h6 class="alert-heading">
      <%= @admin_item.errors.count %>件のエラーが発生しました
    </h6>
      <% @admin_item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @admin_item do |f| %>

  <div>
    商品画像
    <%= f.file_field :image, accept: "image/*", class: "w-100" %>
  </div>

  <div>
    商品名
    <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
  </div>

  <div>
    商品説明
    <%= f.text_area :introduction, class: "form-control", rows: "3", placeholder: "ここに説明文を記述します" %>
  </div>

  <div>
    税抜価格
    <%= f.text_field :price, class: "form-control", placeholder: "税抜価格" %>
  </div>

  　<%= f.submit '新規登録', class: "btn btn-lg btn-block btn-info mt-4" %>

<% end %>