<h2>会員情報編集</h2>

<%= form_with model: @customer do |f| %>
  <label for="inputName">氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputLast_name" %>
  <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name" %></br>

  <label for="inputKana">カナ</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana" %>
  <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana" %></br>

  <label for="inputPostal_code">郵便番号</label>
  <%= f.number_field :postal_code, autofocus: true, id:"inputPostal_code" %></br>

  <label for="inputAddress">住所</label>
  <%= f.text_field :address, autofocus: true, id:"inputAddress" %></br>

  <label for="inputTelephone_number">電話番号</label>
  <%= f.number_field :telephone_number, autofocus: true, id:"inputTelephone_number" %></br>

  <label for="inputEmail">メールアドレス</label>
  <%= f.number_field :email, autofocus: true, id:"inputEmail" %></br>

  <%= f.submit "編集内容を保存" %>

<% end %>